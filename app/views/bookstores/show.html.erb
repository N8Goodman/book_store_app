<h1 id="bookstore_title"><%= @bookstore.name %> Reviews</h1>
  <h4 id="bookstore_location"><%= @bookstore.address%><br><%= @bookstore.city%>, <%= @bookstore.state%> <%= @bookstore.zip_code%></h4>

  <div id="bookstore_image">
    <img src=<%= @bookstore.img_url%>>
  </div>

  <div id="bookstore_website">
    <%= link_to "Visit the website", @bookstore.url if @bookstore.url %>
  </div>

  <div id="bookstore_description">
    Description: <%= @bookstore.description if @bookstore.description %>
  </div>

  <% if @bookstore.food == true %>
    <div id="bookstore_food">
      This bookstore serves food!
    </div >
  <% end %>

  <% if @bookstore.beverage == true %>
    <div id="bookstore_beverages">
      This bookstore serves beverages!
    </div>
  <% end %>

  <%= link_to "Edit Bookstore", edit_bookstore_path(@bookstore) if current_user == @bookstore.user %>
  <br>
  <%= button_to "Delete Bookstore", @bookstore, method: :delete if current_user == @bookstore.user %>
  <br>
  <h3>Reviews:</h3>

    <ul id="review_list">
      <% @reviews.each do |review| %>
        <li>
          <div class="review_body">
            <%= review.count %>
            <%= review.body%>
            <br>
            Overall: <%= review.overall_rating %>, Price: <%= review.price_rating %>, Customer Service: <%= review.customer_service_rating %>
              <%= button_to '+1', review_upvotes_path(review), method: :post %>
              <%= button_to '-1', review_downvotes_path(review), method: :post %>
              <%= link_to "Edit Review", edit_bookstore_review_path(@bookstore, review) if current_user == review.user %>
              <%= button_to "Delete Review", review, method: :delete if current_user == review.user %>

          </div>
        </li>
      <% end %>
    </ul>
  <br>

  <%= render '/reviews/form' %>

<%= link_to "Home", bookstores_path %>
