

<div class="small-12 columns bookstores-index">
  <% @bookstores.each do | bookstore |%>
  <div class="small-12 medium-4 columns media-object">
    <div class="media-object-section">
      <a href="/bookstores/<%= bookstore.id %>"> <img class="thumbnail" src="http://placehold.it/100x100"></a>
    </div>
    <div class="media-object-section">
      <h5><%= link_to bookstore.name, bookstore_path(bookstore) %></h5>
      <p><%= bookstore.city%>, <%= bookstore.state %></p>
    </div>
  </div>
  <% end %>
</div>
<hr>
<div class="pagination">
  <%= paginate @bookstores %>
</div>

<%= link_to "Add New Bookstore", new_bookstore_path %>
