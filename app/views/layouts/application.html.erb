<!DOCTYPE html>
<html>
  <head>
    <title>BookStoreApp</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <header>
    <%= link_to "Home", root_path %>
    <%= button_to "Sign Up", new_user_registration_path if !current_user %>
    <%= button_to "Sign In", new_user_session_path  if !current_user %>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete if current_user %>
  </header>

  <body>
    <div class="notices">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <%= content_tag :div, msg, :class => "flash_#{name}" %>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
